<%- include('../partials/search.ejs') %>
<% if (user) { %>
    <h4>Hello, <%= user.username %>!</h4>
  <% } %>
  <h2>Saved Recipes:</h2>
<% recipes.forEach(recipe => { %>
  <h4><%= recipe.dataValues.label %></h4>
  <form action="/recipes/detail" method="GET">
    <input type="hidden" name="uri" value="<%= recipe.dataValues.uri %>">
    <input type="submit" value="See More Info">
  </form>
  <form action="/recipes/<%= recipe.id %>>/?_method=DELETE" method="POST">
    <input type="hidden" name="id" value="<%= recipe.id %>">
    <input type="submit" value="Remove">
  </form>
<% }) %>
 