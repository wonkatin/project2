<%- include('../partials/search.ejs') %>
<% if (user) { %>
    <h2>Here are the results, <%= user.username %>! There are <%= count %> recipes with <%= search %> </h2>
        <% if (count > 100) { %>
            <p>try adding items or limiting maximum ingredients to find fewer results</p>
        <% } %>
<% } else { %>
